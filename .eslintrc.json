{
	"parserOptions": {
		"ecmaVersion": 2018,
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true
		}
	},
	"env": {
		"node": true,
		"es6": true,
		"jest": true
	},
	"extends": ["eslint:recommended", "plugin:react/recommended", "prettier"],
	"rules": {
		"semi": 2,
		"prefer-template": "warn"
	}
}
